<div class="container">
  <h1 class="page-header">Things to do</h1>

    <ul class="list-group">
      <li class="list-group-item">
        <strong><%= todoItem.title %>: </strong><br>
        <%= todoItem.description %><br>
        Completed: <%= todoItem.completed %><br>

        <a class="btn btn-warning" href=<%= "/todo/" + todoItem._id + "/edit" %>>Edit</a>

        <form method="POST" action=<%= "/todo/" + todoItem._id + "?_method=DELETE" %>>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

      </li>
    </ul>

</div>
